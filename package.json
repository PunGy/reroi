{
  "name": "reroi",
  "private": false,
  "version": "0.3.0",
  "description": "Library for creating reactive systems with maximum control.",
  "license": "MIT",
  "author": "Maxim Iakovlev <max.yakovlev555@gmail.com>",
  "keywords": [
    "reactivity",
    "reactive",
    "reactive-programming",
    "observable"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PunGy/reroi.git"
  },
  "type": "module",
  "module": "./dist/reroi.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/reroi.js",
      "require": "./dist/reroi.cjs"
    },
    "./dist/": {
      "import": "./dist/",
      "require": "./dist/"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "rimraf --glob build/**/* && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.json && copyfiles package.json README.md LICENSE build",
    "preview": "vite preview",
    "type:check": "tsc --noEmit",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "publish:prepare": "pnpm run build && cd build",
    "publish:alpha": "pnpm run publish:prepare && npm publish --tag=alpha",
    "publish:latest": "pnpm run publish:prepare && npm publish --tag=latest"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "copyfiles": "^2.4.1",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "rimraf": "^6.0.1",
    "type-fest": "^4.33.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.19.1",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  }
}
